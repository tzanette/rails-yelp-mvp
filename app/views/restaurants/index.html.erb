<p id="notice"><%= notice %></p>

  <h1>Restaurants</h1>
<br>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Category</th>
        <th>Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.category %></td>
          <td><%= link_to 'Show', restaurant %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p class="btn btn-outline-primary"><%= link_to "Add a new restaurant", new_restaurant_path %></p>
