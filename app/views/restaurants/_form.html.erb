<%= simple_form_for(@restaurant) do |f| %>

  <% if @restaurant.errors.any? %>
    <div class="errors-container">
    </div>
  <% end %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>